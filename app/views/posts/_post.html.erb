<div class='col-md-5'>
	<h1><%= link_to post.title, post_path(post) %></h1>
	<%= image_tag post.image.url(:thumb), class: 'instagram-upload' %></h1>
		<p><%= post.content %></p>

		<h3 class='votes_count'><%= post.points %></h3>	

	<% if user_signed_in? %>
		<%= button_to 'Upvote', post_votes_path(post, up: true) %>
		<%= button_to 'Downvote', post_votes_path(post, up: false) %>	
	<% end %>

	<% if post.user == current_user %>
		<%= link_to 'Edit post', edit_post_path(post) %>
		<%= link_to 'Delete post', post_path(post), method: :delete %>
	<% end %>	

		<div class='tags'>
			<% post.tags.each do |tag| %>
		     <%= link_to tag, tag_posts_path(tag) %>
			<% end %>
		</div>

<%= link_to 'Add a comment', new_post_comment_path(post) %>
<br>


	<% if post.comments.any? %>
		<div class='post-comments'>
	<%= link_to 'Show comments', '#', data: { url: post_comments_path(post, format: :json) }, class: 'btn btn-success show-comments'%>
	<div class='spinner'>
		<img src='http://www.iab.net/extra/adquickref/spinnerLarge.gif'>
	</div>

	<script type='text/template', id='comment-template'>
		<div class ='well'>
			<h4>{{ commenter }}</h4>
			<p>{{ text }}</p>
		</div>
	</script>

		<div class='comments-container'></div>
		</div>
	<% end %>


</div>

		

